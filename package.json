{
  "name": "pandabt-helper",
  "displayName": "PandaBT 2.0 Helper",
  "description": "panda behavior tree 2.0 helper",
  "publisher": "ryulurala",
  "author": {
    "name": "ryulurala",
    "email": "ryulurala@gmail.com"
  },
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "bugs": {
    "url": "https://github.com/ryulurala/vscode_pandabt2_helper/issues"
  },
  "homepage": "https://github.com/ryulurala/vscode_pandabt2_helper",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryulurala/vscode_pandabt2_helper.git"
  },
  "icon": "img/pandabt-icon.png",
  "main": "main.js",
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:pandabt"
  ],
  "contributes": {
    "configuration": {
      "title": "PandaBT Helper",
      "properties": {
        "pandabt-helper.semanticRules": {
          "type": "array",
          "default": [],
          "markdownDescription": "정규식 기반 Semantic Token 규칙. settings.json에 저장하면 즉시 하이라이팅에 반영됩니다.",
          "items": {
            "type": "object",
            "required": [
              "type",
              "match"
            ],
            "properties": {
              "type": {
                "type": "string",
                "markdownDescription": "토큰 타입 이름"
              },
              "match": {
                "type": "string",
                "markdownDescription": "정규표현식(슬래시 제외)"
              },
              "flags": {
                "type": "string",
                "default": "",
                "markdownDescription": "정규식 플래그(i, m, s, u, y — g는 내부에서 자동)"
              }
            },
            "additionalProperties": false
          }
        },
        "pandabt-helper.semanticColors": {
          "type": "object",
          "default": {},
          "markdownDescription": "Semantic Token 타입별 색상(전경색/스타일).",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "foreground": {
                "type": "string",
                "markdownDescription": "전경색(hex)"
              },
              "fontStyle": {
                "type": "string",
                "enum": [
                  "",
                  "italic",
                  "bold",
                  "underline",
                  "bold italic",
                  "underline italic",
                  "bold underline",
                  "bold underline italic"
                ],
                "markdownDescription": "폰트 스타일"
              }
            },
            "additionalProperties": false
          }
        }
      }
    },
    "configurationDefaults": {
      "[pandabt]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": false,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ryulurala.pandabt-helper"
      }
    },
    "languages": [
      {
        "id": "pandabt",
        "aliases": [
          "PandaBT",
          "pandabt"
        ],
        "extensions": [
          ".pbt"
        ],
        "configuration": "config/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "pandabt",
        "scopeName": "source.pandabt",
        "path": "pandabt/pandabt.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "package": "npx vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.23.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
